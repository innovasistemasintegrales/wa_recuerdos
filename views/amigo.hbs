<!-- PAGINA DEL AMIGO -->

<div>
    <!-- Seccion del Header -->
    <header id='seccionHeader' class='seccion-header'>
        <div id='cajaHeader' class='caja-header d-flex align-items-center justify-content-between w-100 px-3'>
            <img class='logo-recuerdos pointer-cursor' src='img/logo-blanco.png' alt='logo-recuerdos' />
            <i class='bi bi-person-circle text-white fs-2 pointer-cursor'></i>
        </div>
    </header>

    <!-- Contenedor Principal -->
    <main id='seccionPrincipal' class='seccion-principal container-fluid row p-0 m-0'>
        <!-- Barra Lateral -->
        <aside id='seccionBarraLateral' class='seccion-barra-lateral col-12 col-sm-12 col-md-4 col-lg-3 col-xl-3 col-xxl-2 p-0'>
            <div class='caja-barra-lateral d-flex flex-column align-items-center p-4'>
                <img src='img/usuario.png' class='foto-perfil-usuario w-50 p-1' alt='mi-foto-de-perfil' />
                <span class='saludo-usuario text-white fw-bold fs-5 py-3'>
                    Bienvenido
                    <span id='nombreUsuario'>
                        {{#if userName}}
                            {{userName}}
                        {{else}}
                            Usuario
                        {{/if}}
                    </span>
                </span>

                <ul class='caja-items list-unstyled w-100 d-flex flex-column gap-2'>
                    <li id='btnMiPerfil' class='item-menu'>
                        <i class='bi bi-person-fill fs-4'></i>
                        <span>
                            Mi Perfil
                        </span>
                    </li>
                    <hr class='border border-1 border-white w-100' />
                    <li id='btnNotificacion' class='item-menu'>
                        <i class='bi bi-bell-fill fs-5'></i>
                        <span>
                            Notificacion
                        </span>
                    </li>
                    <li id='btnMiGaleria' class='item-menu activo'>
                        <i class='bi bi-image-fill fs-5'></i>
                        <span>
                            Mi galeria
                        </span>
                    </li>
                    <li id='btnMisAlbumes' class='item-menu'>
                        <i class='bi bi-folder-fill fs-5'></i>
                        <span>
                            Mis Albumes
                        </span>
                    </li>
                    <hr class='border border-1 border-white w-100' />
                    <li id='btnCerrarSesion' class='item-menu'>
                        <i class='bi bi-arrow-right-square-fill fs-5'></i>
                        <span>
                            Cerrar Sesion
                        </span>
                    </li>
                </ul>
            </div>
        </aside>

        <!-- Contenido Principal -->
        <div id='seccionContenidoGeneral' class='seccion-contenido-general col-12 col-sm-12 col-md-8 col-lg-9 col-xl-9 col-xxl-10 d-flex flex-column p-0'>
            <!-- Slider (estático para todas las vistas) -->
            <section id='seccionSlider' class='seccion-slider'>
                <div id='carouselExampleIndicators' class='carousel slider' data-bs-ride='carousel'>
                    <div class='carousel-indicators'>
                        <button type='button' data-bs-target='#carouselExampleIndicators' data-bs-slide-to='0' class='active' aria-current='true' aria-label='Slide 1'></button>
                        <button type='button' data-bs-target='#carouselExampleIndicators' data-bs-slide-to='1' aria-label='Slide 2'></button>
                        <button type='button' data-bs-target='#carouselExampleIndicators' data-bs-slide-to='2' aria-label='Slide 3'></button>
                        <button type='button' data-bs-target='#carouselExampleIndicators' data-bs-slide-to='3' aria-label='Slide 4'></button>
                    </div>

                    <div class='carousel-inner'>
                        <div class='carousel-item active'>
                            <img src='img/slider-1.jpg' class='d-block w-100' alt='imagen-slider-1' />
                        </div>
                        <div class='carousel-item'>
                            <img src='img/slider-2.jpg' class='d-block w-100' alt='imagen-slider-2' />
                        </div>
                        <div class='carousel-item'>
                            <img src='img/slider-3.jpg' class='d-block w-100' alt='imagen-slider-3' />
                        </div>
                        <div class='carousel-item'>
                            <img src='img/slider-4.jpg' class='d-block w-100' alt='imagen-slider-4' />
                        </div>
                    </div>

                    <button class='carousel-control-prev' type='button' data-bs-target='#carouselExampleIndicators' data-bs-slide='prev'>
                        <span class='carousel-control-prev-icon' aria-hidden='true'></span>
                        <span class='visually-hidden'>
                            Anterior
                        </span>
                    </button>
                    <button class='carousel-control-next' type='button' data-bs-target='#carouselExampleIndicators' data-bs-slide='next'>
                        <span class='carousel-control-next-icon' aria-hidden='true'></span>
                        <span class='visually-hidden'>
                            Siguiente
                        </span>
                    </button>
                </div>
            </section>

            <!-- Contenido dinámico o reactivo -->
            <div id='seccionContenidoReactivo' class='seccion-contenido-reactivo'>
                <section id='seccionMiGaleria' class='seccion-mi-galeria container p-0'>
                    <div id='contenedorOrganizar' class='contenedor-organizar row d-flex flex-row align-items-center px-3 p-2'>
                        <div class='col-6'>
                            <span class='texto-organizar text-white fs-5 fw-semibold'>
                                Organizar
                            </span>
                        </div>

                        <div class='filtro-busqueda col-6 d-flex flex-row align-items-center justify-content-end gap-2'>
                            <button class='btn btn-filtrar' type='button'>
                                <i class='bi bi-funnel-fill'></i>
                            </button>

                            <input type='search' id='cajaBuscarGaleria' class='caja-buscar' placeholder='Buscar...' aria-label='Buscar' />

                            <button class='btn btn-buscar' type='button'>
                                <i class='bi bi-search'></i>
                            </button>
                            <button class='btn btn-agregar-archivo text-white' type='button'>
                                <i class='bi bi-plus-lg'></i>
                            </button>
                        </div>
                    </div>

                    <div class='contenedor-informacion p-3 py-3 d-flex align-items-center justify-content-between'>
                        <span class='nombre-galeria fs-5 fw-semibold'>
                            Mi Galeria
                        </span>
                        <span id='contadorGaleria' class='contador-galeria fs-5 fw-semibold'>
                            {{totalArchivos}}
                        </span>
                    </div>

                    <div class='contenedor-galeria-archivos container p-3'>
                        <!-- Si no hay ningun elemento de busqueda se muestra -->
                        {{#if archivos.length}}
                            <!-- Caja de galeria (cargar archivos)-->
                            <div class='row d-flex flex-wrap justify-content-center align-items-center gap-3'>
                                {{#each archivos}}
                                    <div class='contenedor-archivo col-auto p-2'>
                                        <div class='caja-archivo rounded overflow-hidden d-flex flex-column'>
                                            <!-- Portada del archivo -->
                                            <div class='portada-archivo'>
                                                <!-- Botones de archivo -->
                                                <button class='boton-icono boton-extension'>
                                                    <span class='extension'>
                                                        {{extension}}
                                                    </span>
                                                </button>
                                                <button class='boton-icono boton-privacidad'>
                                                    <i class='bi bi-{{privacidad}}'></i>
                                                </button>
                                                <button class='boton-icono boton-eliminar'>
                                                    <i class='bi bi-trash-fill'></i>
                                                </button>
                                                <button class='boton-icono boton-descargar'>
                                                    <i class='bi bi-arrow-down'></i>
                                                </button>
                                                <img src='{{portada}}' alt='mi-archivo' />
                                            </div>
                                            <p id='nombreElemento' class='nombre-archivo mt-3 text-center fw-semibold'>
                                                {{nombreImagen}}
                                            </p>
                                        </div>
                                    </div>
                                {{/each}}
                            </div>
                        {{else}}
                            <div class='contenedor-notificaciones-galeria d-flex flex-row align-items-center justify-content-center rounded gap-2 p-2 shadow-sm'>
                                <div class='icono-notificacion col-2 rounded d-flex align-items-center justify-content-center'>
                                    <i class='bi bi-emoji-frown-fill'></i>
                                </div>
                                <div class='texto-notificacion col-10 rounded d-flex align-items-center'>
                                    <span class='fs-6 fw-semibold'>
                                        Ningun elemento, puedes agregar ahora tus archivos...
                                    </span>
                                </div>
                            </div>
                        {{/if}}
                    </div>
                </section>
            </div>
        </div>
    </main>

    <!-- ======================= TEMPLATES INTERACTIVOS ======================== -->
    <!--  Templates Mi Perfil -->
    <template id='templateMiPerfil'>
        <h3>
            Este sera mi perfil
        </h3>
    </template>

    <!--  Templates Mi Galeria -->
    <template id='templateNotificaciones'>
        <h3>
            Este sera notificaciones
        </h3>
    </template>

    <!--  Templates Mis Albumes -->
    <template id='templateMisAlbumes'>
        <secction id='seccionMisAlbumes' class='seccion-mis-albumes container p-0'>
            <div id='contenedorOrganizar' class='contenedor-organizar row d-flex flex-row align-items-center px-3 p-2'>
                <div class='col-6'>
                    <span class='texto-organizar text-white fs-5 fw-semibold'>
                        Organizar
                    </span>
                </div>

                <div class='filtro-busqueda col-6 d-flex flex-row align-items-center justify-content-end gap-2'>
                    <button class='btn btn-filtrar' type='button'>
                        <i class='bi bi-funnel-fill'></i>
                    </button>

                    <input type='search' id='cajaBuscarAlbum' class='caja-buscar' placeholder='Buscar...' aria-label='Buscar' />
                    <button class='btn btn-buscar' type='button'>
                        <i class='bi bi-search'></i>
                    </button>
                    <button id='botonCrearAlbum' class='btn btn-crear-album text-white' type='button'>
                        <i class='bi bi-plus-lg'></i>
                    </button>
                </div>
            </div>

            <div class='contenedor-informacion p-3 py-3 d-flex align-items-center justify-content-between'>
                <span class='nombre-album fs-5 fw-semibold'>
                    Mis Albumes
                </span>
                <span id='contadorAlbumes' class='contador-albumes fs-5 fw-semibold'>
                    {{totalAlbumes}}
                </span>
            </div>

            <div class='contenedor-galeria-albumes container p-3'>
                <!-- Cargar albumes (si es que los hay) -->
                {{#if albumes.length}}
                    <div class='row d-flex flex-wrap justify-content-center align-items-center gap-3'>
                        {{#each albumes}}
                            <div class='contenedor-album col-auto p-2'>
                                <div class='caja-album rounded overflow-hidden d-flex flex-column'>
                                    <!-- Portada del archivo -->
                                    <div class='portada-album'>
                                        <!-- Botones de archivo -->
                                        <button class='boton-icono boton-numero-elementos'>
                                            <span class='fs-6'>
                                                {{elementosEnAlbum}}
                                            </span>
                                        </button>
                                        <button class='boton-icono boton-privacidad'>
                                            <i class='bi bi-{{privacidad}}'></i>
                                        </button>
                                        <button class='boton-icono boton-eliminar'>
                                            <i class='bi bi-trash-fill'></i>
                                        </button>
                                        <button class='boton-icono boton-descargar-zip'>
                                            <i class='bi bi-file-zip-fill'></i>
                                        </button>
                                        <div class='caja-icono-album d-flex align-items-center justify-content-center'>
                                            <i class='icono-album bi bi-folder-fill'></i>
                                        </div>
                                    </div>
                                    <p id='nombreAlbum' class='nombre-album mt-3 text-center fw-semibold'>
                                        {{nombreAlbum}}
                                    </p>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                {{else}}
                    <div class='contenedor-notificaciones-albumes d-flex flex-row align-items-center justify-content-center rounded gap-2 p-2 shadow-sm'>
                        <div class='icono-notificacion col-2 rounded d-flex align-items-center justify-content-center'>
                            <i class='bi bi-emoji-frown-fill'></i>
                        </div>
                        <div class='texto-notificacion col-10 rounded d-flex align-items-center'>
                            <span class='fs-6 fw-semibold'>
                                Ningun Album, crea tus albumes ahora...
                            </span>
                        </div>
                    </div>
                {{/if}}
            </div>
        </secction>
    </template>
</div>

{{! Script para el amigo }}
<script src='/js/amigo.js'></script>