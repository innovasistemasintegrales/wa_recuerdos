{{! Esta es la plantilla principal que se reutiliza en toda la aplicacion }}
<html lang='es'>
    <head>
        <meta charset='UTF-8'/>
        <meta http-equiv='X-UA-Compatible' content='IE=edge'/>
        <meta name='viewport' content='width=device-width, initial-scale=1.0'/>

        {{! Ícono de la pestaña del navegador }}
        <link rel='icon' href='' type='image/x-icon'/>

        {{! Bootstrap (Solo se carga la versión mas reciente desde CDN) }}
        <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css'>
        <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css'/>

        {{! Estilos personalizados }}
        <link rel='stylesheet' href='/css/styles.css'/>

        {{!-- jQuery (necesario para algunos plugins) --}}
        <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>

        {{!-- Titulo Dinamico --}}
        <title> {{#if titulo}}{{titulo}}{{else}} Recuerdos {{/if}} </title>
    </head>
    <body>

        {{!-- El header Parcial --}}
        <header id="contenedorHeader" class="contenedor-header">
            {{> header }}
        </header>


        {{!-- Contenido Principal --}}
        <main class="contenedor-main container-fluid">

            <div class="estructura-contenido row ">
                <!-- Contenedor para barra lateral -->
                <aside class="contenedor-barra-lateral col-12 col-sm-12 col-md-4 col-lg-3 col-xl-3 col-xxl-2 p-0">
                    {{> barra-lateral-user }}
                </aside>

                <!-- Contenedor para contenido principal -->
                <section id="contenedorContenidoPrincipal" class="contenedor-contenido-principal col-12 col-sm-12 col-md-8 col-lg-9 col-xl-9 col-xxl-10 d-flex flex-column p-0">
                    {{> slider }}
                    {{{body}}}
                </section>

            </div>

        </main>

        



        {{!-- Bootstrap JS y Popper.js (para interactividad de Bootstrap) --}}
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
            integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
            crossorigin="anonymous"></script>


        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

        {{!-- Bibliotecas externas --}}
        <script src="/js/tools/sweetalert2.js"></script>
        <script src="/js/tools/flickity.pkgd.min.js"></script>

        {{!-- Scripts de la pagina --}}
        {{#if script}}
            <script src="/js/{{script}}.js"></script>
        {{/if}}

        {{!-- Scripts personalizados --}}
        <script src="/js/tools/script.js"></script>
		<script src="/js/main.js"></script>

        {{!-- Socket.io (para comunicación en tiempo real) --}}
        <script src="/socket.io/socket.io.js"></script>

    </body>
</html>